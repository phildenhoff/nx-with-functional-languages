{
  "name": "utils-rescript",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/utils/rescript/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm rescript",
        "cwd": "packages/utils/rescript"
      },
      "outputs": ["{options.cwd}/src/**.bs.js", "{options.cwd}/src/**.gen.ts"],
      "inputs": ["{projectRoot}/src/**.res"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/utils/rescript/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/utils/rescript"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../../coverage/packages/utils/rescript"
      }
    }
  },
  "tags": []
}
