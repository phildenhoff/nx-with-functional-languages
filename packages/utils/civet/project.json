{
  "name": "utils-civet",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/utils/civet/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/dist/"
      ],
      "inputs": [
        "{projectRoot}/src/**/*.civet",
        "{projectRoot}/src/*.civet"
      ],
      "options": {
        "cwd": "packages/utils/civet",
        "commands": [
          "pnpm civet -c src/**/*.civet -o dist/.ts",
          "rm dist/index.ts || true",
          "echo \"$(find dist/ -name '*.ts' | sed 's/.*\\///' | sed 's/\\.ts//' | sed 's/^/export * from \".\\//' | sed 's/$/\";/' | sed 's/\\/index\"/\"/')\" > dist/index.ts"
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/utils/civet/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{workspaceRoot}/coverage/packages/utils/civet"
      ],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../../coverage/packages/utils/civet"
      }
    }
  },
  "tags": []
}