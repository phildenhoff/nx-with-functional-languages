{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-with-functional-languages/t2": ["packages/t2/src/index.js"],
      "@nx-with-functional-languages/t3": ["packages/t3/src/index.js"],
      "@nx-with-functional-languages/testing-impls": [
        "packages/testing-impls/src/index.ts"
      ],
      "@nx-with-functional-languages/tests": ["packages/tests/src/index.ts"],
      "@nx-with-functional-languages/utils/rescript": [
        "packages/utils/rescript/src/index.ts",
        "packages/utils/rescript/src/index_bs.js"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
