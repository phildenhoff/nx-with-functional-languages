{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-with-functional-languages/js-no-build": [
        "packages/js-no-build/src/index.js"
      ],
      "@nx-with-functional-languages/t3": ["packages/t3/src/index.js"],
      "@nx-with-functional-languages/ts-using-tsc": [
        "packages/ts-using-tsc/src/index.ts"
      ],
      "@nx-with-functional-languages/ts-using-vite": [
        "packages/ts-using-vite/src/index.ts"
      ],
      "@nx-with-functional-languages/utils/clojurescript": [
        "packages/utils/clojurescript/src/index.ts"
      ],
      "@nx-with-functional-languages/utils/rescript": [
        "packages/utils/rescript/src/index.ts",
        "packages/utils/rescript/src/index_bs.js"
      ],
      "@nx-with-functional-languages/utils/scalajs": [
        "packages/utils/scalajs/dist/main.js"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
